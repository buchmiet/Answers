<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
	  <PackageId>Answerable</PackageId>
	  <Version>0.4.9</Version>
	  <Authors>Lukasz Buchmiet</Authors>
	  <Description>Multi tier communication solution.</Description>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <RepositoryUrl>https://github.com/buchmiet/Answers</RepositoryUrl>
	  <IncludeBuildOutput>false</IncludeBuildOutput>
	  <PackDependsOn Condition="'$(NoBuild)' != 'true'">$(PackDependsOn);Build</PackDependsOn>
	  <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\AnswerGenerator\AnswerGenerator.csproj" />
    <ProjectReference Include="..\Answers\Answers.csproj" />
  </ItemGroup>

	<ItemGroup>
		<!-- Dodanie AnswerGenerator jako analyzer -->
		<Analyzer Include="..\AnswerGenerator\bin\$(Configuration)\netstandard2.0\AnswerGenerator.dll" Pack="true" PackagePath="analyzers/dotnet/cs" />
	</ItemGroup>

	<Target Name="CopyAnalyzers" AfterTargets="Build">
		<ItemGroup>
			<Analyzer Include="..\AnswerGenerator\bin\$(Configuration)\netstandard2.0\AnswerGenerator.dll" Pack="true" PackagePath="analyzers/dotnet/cs" />
		</ItemGroup>
	</Target>

</Project>
